{
  "name": "bardoqi/sight",
  "description": "Sight is a simple Laravel presenter layer in the backend of controller for making your coding faster.",
  "keywords": ["laravel", "presenter", "view presenter", "api presenter", "mvp pattern", "array join", "field transform"],
  "license": "MIT",
  "authors": [
    {
      "name": "Bardo Qi",
      "email": "bardooqi@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.2",
    "laravel/framework": "^5.8|^6|^7",
    "illuminate/support": "^5.8|^6|^7"
  },
  "autoload": {
    "psr-4": {
      "Bardoqi\\Sight\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bardoqi\\Sight\\Tests\\": "tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.1.3-dev"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8|^5.2|^7.0"
  },
  "suggest": {
    "prettus/l5-repository": "Required to use the l5-repository (2.6.*)."
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 src/",
    "fix-style": "phpcbf -p --standard=PSR2 src/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
